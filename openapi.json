{
  "components": {
    "schemas": {}
  },
  "info": {
    "description": "A service for managing shortened links with create, access, edit, enable, and disable functionalities.",
    "title": "Goshort",
    "version": "1.0.0"
  },
  "openapi": "3.0.3",
  "paths": {
    "/": {
      "put": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "url": {
                    "description": "The target URL to shorten.",
                    "format": "uri",
                    "type": "string"
                  }
                },
                "required": [
                  "url"
                ],
                "type": "object"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "active": {
                      "description": "Whether the link is active.",
                      "type": "boolean"
                    },
                    "path": {
                      "description": "The shortened path.",
                      "type": "string"
                    },
                    "secret": {
                      "description": "The secret key for managing the link.",
                      "type": "string"
                    },
                    "target": {
                      "description": "The target URL.",
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Link created successfully"
          },
          "400": {
            "description": "Invalid input"
          }
        },
        "summary": "Create a new link"
      }
    },
    "/{path}": {
      "get": {
        "parameters": [
          {
            "description": "The shortened path of the link.",
            "in": "path",
            "name": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "301": {
            "description": "Redirects to the target URL",
            "headers": {
              "Location": {
                "description": "The target URL.",
                "schema": {
                  "format": "uri",
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Link not found"
          }
        },
        "summary": "Access a link"
      }
    },
    "/{path}/disable": {
      "patch": {
        "parameters": [
          {
            "description": "The shortened path of the link.",
            "in": "path",
            "name": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "secret": {
                    "description": "The secret key for managing the link.",
                    "type": "string"
                  }
                },
                "required": [
                  "secret"
                ],
                "type": "object"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "active": {
                      "description": "Whether the link is active.",
                      "type": "boolean"
                    },
                    "path": {
                      "type": "string"
                    },
                    "secret": {
                      "type": "string"
                    },
                    "target": {
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Link disabled successfully"
          },
          "404": {
            "description": "Link not found or invalid secret"
          }
        },
        "summary": "Disable a link"
      }
    }
  },
  "servers": [
    {
      "description": "Local development server",
      "url": "http://localhost:8080"
    }
  ]
}
